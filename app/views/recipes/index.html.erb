<h1>Recipes</h1>

<% @recipes.in_groups_of(2) do |group| %>
	<div class="card-group">
		<% group.compact.each do |recipe| %>
			<div class="col-sm-5">
				<div class="card contentful_product">
          <%= image_tag recipe[:image_url], class: 'card-img-top' %>
					<div class="card-block">
						<h4 class="card-title">
							<%= link_to recipe[:title], recipe_path(recipe[:id]) %>
						</h4>						
					</div>					
				</div>
			</div>
		<% end %>
	</div>
<% end %>
